from PyQt4 import QtCore
import time
import sys

class AThread(QtCore.QThread):

    def run(self):
        count = 0
        while count < 5:
            time.sleep(1)
            print "Increasing"
            count +=1

def usingQThread():

    app = QtCore.QCoreApplication([])
    thread = AThread()
    thread.finished.connect(app.exit)
    thread.start()
    sys.exit(app.exec_())
    
if __name__ == '__main__':
    usingQThread()
